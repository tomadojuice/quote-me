{
  "name": "quote-me",
  "version": "1.0.1",
  "description": "A simple CLI tool for managing and storing your favorite quotes",
  "main": "src/app.js",
  "bin": {
    "quote-me": "./src/app.js"
  },
  "scripts": {
    "start": "node src/app.js",
    "build": "npm run build:web && npm run build:package",
    "build:web": "cd src/web && npm ci && npm run build",
    "build:package": "npm pack"
  },
  "keywords": [
    "cli",
    "quotes",
    "productivity",
    "terminal",
    "command-line"
  ],
  "author": "Alessio Seeberger",
  "license": "MIT",
  "type": "module",
  "engines": {
    "node": ">=20.0.0"
  },
  "files": [
    "src/**/*",
    "!src/web/src/**/*",
    "!src/web/node_modules/**/*",
    "!src/web/package*.json"
  ],
  "dependencies": {
    "commander": "^11.1.0",
    "express": "^5.1.0",
    "html-to-image": "^1.11.13",
    "http-proxy-middleware": "^3.0.5",
    "lowdb": "^7.0.1",
    "uuid": "^10.0.0"
  }
}
